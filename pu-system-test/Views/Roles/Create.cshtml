@{
	ViewBag.Title = "Създай роля";
}

<h2 class="text-center pt-3 pb-2">Създай роля</h2>

@using (Html.BeginForm())
{
	<div class="form-horizontal col-md-8 mx-auto">
		<hr />
		<div class="form-group">
			<div class="col-md-12">
				@Html.TextBox("RoleName", "", new { placeholder = "Име", @class = "form-control" })
			</div>
		</div>
        <div class="form-group mt-5">
            <div class="col-md-offset-2 col-md-12 text-center">
                <input type="submit" value="Създай" class="btn btn-success pl-5 pr-5" />
                @Html.ActionLink("Отказ", "Index", new { area = "" }, new { @class = "btn btn-secondary pl-5 pr-5" })
            </div>
        </div>
	</div>
}