            {
                @Html.ActionLink("Добави профил информация", "CreateProfileStudent", new { area = "" }, new { @class = "btn btn-outline-dark btn-lg btn-block" })
            }
            else if (Model.ProfileCreated && User.IsInRole("Firm"))
            {
                @Html.ActionLink("Редактирай профил информация", "EditProfileFirm", new { area = "" }, new { @class = "btn btn-outline-dark btn-lg btn-block" })
            }
            else if (Model.ProfileCreated && User.IsInRole("Student"))
            {
                @Html.ActionLink("Редактирай профил информация", "EditProfileStudent", new { area = "" }, new { @class = "btn btn-outline-dark btn-lg btn-block" })
            }
