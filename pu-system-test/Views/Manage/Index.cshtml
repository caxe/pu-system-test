@model pu_system_test.Models.IndexViewModel
@{
    ViewBag.Title = "Профил";
}

<h2 class="mt-3 mb-3 text-center">@ViewBag.Title</h2>

<p class="text-success text-center">@ViewBag.StatusMessage</p>
<div class="account text-center bg-light">
    <h4 class="pt-2">Настройки</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Промени парола", "ChangePassword", new { area = "" }, new { @class = "btn btn-outline-dark btn-lg btn-block" })
            }
            else
