<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("ПУ Практики", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="main-navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Начало", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @Html.ActionLink("Практики", "Index", "Practices", new { area = "" }, new { @class = "nav-link" })
                    @if (User.IsInRole("Firm"))
                    {
                        @Html.ActionLink("Стажове", "Index", "Internships", new { area = "" }, new { @class = "nav-link" })
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Роли", "Index", "Roles", new { area = "" }, new { @class = "nav-link" })
                        @Html.ActionLink("Управление на роли", "ManageRoleToUser", "Roles", new { area = "" }, new { @class = "nav-link" })
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ПУ Практики</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>